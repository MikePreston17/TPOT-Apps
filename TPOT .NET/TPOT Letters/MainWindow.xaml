<Window
    x:Class="TPOTLetters.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TPOTLetters"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="TPOT Letters"
    Width="800"
    Height="800"
    MinWidth="400"
    MinHeight="300"
    FontSize="16"
    mc:Ignorable="d">
    <Window.Resources>
        <ResourceDictionary>
            <Style TargetType="Expander">
                <!--<Setter Property="Background" Value="#08BEFF" />-->
            </Style>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <StackPanel
            Grid.Column="0"
            VerticalAlignment="Top"
            Orientation="Vertical">
            <local:MainOptionsControl
                x:Name="buttons"
                Grid.Row="0"
                Grid.Column="1"
                HorizontalAlignment="Left" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="170*" />
                    <ColumnDefinition Width="50*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                <!--<local:LetterDetailsControl x:Name="letterDetailsView" Loaded="letterDetailsView_Loaded" />-->
                <local:LettersToolbar
                    x:Name="toolbar"
                    Grid.Row="1"
                    HorizontalAlignment="Center" />
            </Grid>
            <Grid Name="Editors">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>
                <StackPanel VerticalAlignment="Center">
                    <Expander IsExpanded="True">
                        <local:RtfBoxControl x:Name="rtfTextEditor" />
                    </Expander>
                    <Expander IsExpanded="True">
                        <local:HtmlBoxControl x:Name="htmlTextEditor" />
                    </Expander>
                </StackPanel>
                <StackPanel
                    Name="lowerButtonPanel"
                    Grid.Row="1"
                    Margin="20"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Orientation="Horizontal" />
            </Grid>
        </StackPanel>
    </Grid>
</Window>
